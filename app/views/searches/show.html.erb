<div>
  <div class="logo">
      <%= image_tag "mainlogo" %>
  </div>

  <div class="watson-rating-card mt-3">
    <h3><strong>"<%=@search.website_url %>"</strong></h3>
    <i class="fa-regular fa-thumbs-up"></i>
    <p class="mt-3 mb-5">Rating score is <strong>97%</strong></p>
  </div>

  <div style="text-align:center">
    <%= link_to "Search again", searches_path, class: "btn-green" %>
  </div>

  <div class="line">
  </div>

  <div class="card-container">
    <p><strong>Search results</strong></p>
      <div class="show-card">
      <ul>
        <li>Trustpilot Verification : <%= @search.trustpilot_verification %></li>
        <li>ScamDoc Score : <%= @search.scandoc %></li>
        <li>HTTPS Presence : <%= @search.https %></li>
      </ul>
    </div>
  </div>

  <p style="text-align:center;">Make your life <strong>easier</strong></p>

  <div style="text-align:center";>
    <%= link_to"Save search", new_user_registration_path, class:"btn-yellow" %>
  </div>

  <div class="line">
  </div>
</div>
