<div class="wrapper" data-controller="search">

  <div class="logo">
    <%= image_tag "mainlogo", width: "100%" %>
  </div>

  <div class="display-search" data-search-target="displaySearch">
    <div class="searching", width="100%">
       <h2 class="animated-text" data-text="Analysing...">Analysing...</h2>
    </div>
    <div class="glass-position">
      <div class="spinner">
      </div>
      <%= image_tag "search.png", class: "glass", alt: "search", width: "246px" %>
    </div>
  </div>

  <div class="display-slogan" data-search-target="displaySlogan">
    <div class="slogan" >
      <h1>We check <br>the red<br> flags.</h1>
      <h1><strong>You shop <br>safely.</strong></h1>
    </div>


    <div>
      <%= form_with url: "/searches", method: :post, data: { search_target: "mainSearch" } do |form| %>

        <div class ="d-flex">
          <%= form.text_field :query, class: "form-input" %>
          <div>
            <%= button_tag content_tag(:i, "", class:"fa-solid fa-magnifying-glass"), type: "submit", data: { action: "click->search#displaySearch" }, id: "lupa" %>
          </div>
        </div>
        <p id= info-search> Write your shop's <strong>web address</strong> above</p>
      <% end %>
    </div>

    <div>
      <p id= top-searches> Top <strong>3</strong> searches:</p>
      <% @searches.each do |search| %>

        <div class= "index-card">
          <p> <strong><%=search.website_name%></strong></p>
          <p> <%= search.website_url %></p>
          <%# <p>Rating: <%= search.rating % >/10 </p> %>
        </div>
      <% end %>
    </div>


    <div class="line">
    </div>
  </div>

</div>
