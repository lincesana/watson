<h2 class="text-center pt-4 my-4">Hello <strong>again!</strong></h2>

<h2 class="text-center pt-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>

  <div class="row justify-content-center">
    <div class="form-inputs col-10 col-md-6 col-lg-4">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Userame" }%>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions row justify-content-center py-2">
    <%= f.button :submit, "Log in", class:"btn primary-btn" %>
  </div>
<% end %>

<div class="text-center py-2">
  <%= render "devise/shared/links" %>
</div>

<div class="line">
</div>
